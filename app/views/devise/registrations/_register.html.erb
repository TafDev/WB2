<h2>Sign up</h2>
<div class="ui mini form">

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>

			<div class="field">
				<%#= f.label :username %>
				<%= f.text_field :username, autofocus: true, placeholder: "Username" %>
			</div>

			<div class="field">
				<%#= f.label :email %>
				<%= f.email_field :email, placeholder: "Email" %>
			</div>

			<div class="field">
				<%#= f.label :password %>
				<% if @minimum_password_length %>
						<!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
				<% end %>
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password (6 characters min)" %>
			</div>

			<div class="field">
				<%#= f.label :password_confirmation %>
				<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
			</div>

			<div class="actions">
				<%= f.submit "Sign up", class: "ui teal button" %>
			</div>

			<%#= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
	<% end %>
	<div class="ui horizontal divider">
		Or
	</div>
	<%= render "devise/shared/links" %>
	</div>
</div>

